<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/background_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/status_Textview"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_background"
                android:fontFamily="sans-serif-thin"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/save_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>


        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/devicename_Textview"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="50dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/message_Textview"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:fontFamily="@font/ostrichsansmedium"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="Welcome."
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="2.0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/room_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-condensed-light"
                android:elevation="10dp"
                android:text=""
                android:textSize="90dp"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_bias="2.0"
                app:layout_constraintLeft_toLeftOf="@id/message_Textview"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints,UnknownId" />

        </android.support.constraint.ConstraintLayout>

        <EditText
            android:id="@+id/username_editText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:hint="Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name_editText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="Nickname"
                        android:inputType="text"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/chipid_editText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="#FDFDFD"
                        android:ems="10"
                        android:foregroundTint="#BC3F3F"
                        android:hint="CHIPID"
                        android:inputType="textVisiblePassword"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="0dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/add_button_layout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="ADD"
                            android:backgroundTint="@color/grey"
                            android:elevation="10dp"
                            android:textColor="@color/grey"
                            android:textSize="20dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:visibility="visible"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

</android.support.constraint.ConstraintLayout>